doctype html

html(lang="en")
	head
		title= lesson.title
		include head
			link(rel="stylesheet" href="../css/activity-lesson-styles.css")
	body
		include header
		main
			h2= lesson.title
			p Year #{lesson.yeargroup}
			p #{lesson.duration} minutes

			h3 Lesson Contents

			a(href=`../lessonzip/${lesson.id}` download) Download All Resources

			table#lesson-activities
				each activity in activities
					tr
						table.lesson-activity
							tr
								td= activity.title
								td(rowspan=2).act-download: a(href=activity.actzip download) Download Activity
							tr: td #{activity.duration} minutes